extends ../layout

block content
	.ui-layout
		.ui-slider(id="lszhSlider")
			ul.ui-slider-scroll
				each val, i in ['../images/banner_01.jpg','../images/banner_02.png','../images/banner_03.png']
					li
						img(src="#{val}", width="100%", height="100%")
	.container
		.row
			each item in movies
				.col-md-2
					.thumbnail
						a(href="/movie/#{item._id}")
							img(src="#{item.poster}", alt="#{item.title}")
						.caption
							h3 #{title.title}
							p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片

	script(type='text/javascript').
		new LszhSlider( $("#lszhSlider") );